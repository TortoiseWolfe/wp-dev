# .env.example - DO NOT USE THESE VALUES IN PRODUCTION
# Local development only - for production, use Google Secret Manager with setup-secrets.sh

# MySQL database settings 
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress

# WordPress database connection
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_NAME=wordpress

# WordPress installation settings
WP_SITE_URL=http://localhost:8000
WP_SITE_TITLE="My WordPress Site"
WP_ADMIN_USER=admin

# Domain and email for SSL certificates
DOMAIN_NAME=localhost
CERTBOT_EMAIL=admin@example.com

# SECURITY WARNING: For local development ONLY
# DO NOT add real credentials below - use setup-local-dev.sh instead
# For production, secrets come from Google Secret Manager via setup-secrets.sh
# 
# MYSQL_ROOT_PASSWORD=<generated by setup-local-dev.sh>
# MYSQL_PASSWORD=<generated by setup-local-dev.sh>
# WORDPRESS_DB_PASSWORD=<generated by setup-local-dev.sh>
# WP_ADMIN_PASSWORD=<generated by setup-local-dev.sh>
# WP_ADMIN_EMAIL=<generated by setup-local-dev.sh>
# GITHUB_TOKEN=<from Google Secret Manager>
